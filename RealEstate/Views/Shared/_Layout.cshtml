<!DOCTYPE html>
<html ng-app="appRealEstate">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/angular")
    @Scripts.Render("~/bundles/underscore")
    
    @Scripts.Render("~/bundles/RealEstateScripts")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @Styles.Render("~/Content/css")
    <meta name="description" content="The description of my page" />
</head>
<body>
    <header></header>
    <nav class="navbar navbar-default">
        <ul class="nav navbar-nav " id="top_menu" >
            @if (Session["UserName"] == null)
            {
            
                <li>
                    @Html.ActionLink("Войти", "LogIn", "Account")
                </li>
                <li>
                    @Html.ActionLink("Недвижимость", "Table", "Estates")
                </li>
                <li>
                    @Html.ActionLink("Справочник областей", "Regions", "Directories", new { tableName = "Regions", title = "Справочник областей" }, null)
                </li>
                <li>
                    @Html.ActionLink("Справочник городов", "Regions", "Directories", new { tableName = "Cities", title = "Справочник городов" }, null)
                </li>
                <li>
                    @Html.ActionLink("Справочник районов", "Districts", "Directories")
                </li>
            }
            else
            {
                <li style="width:100%;height:4em;background-color:black;">
                    <div style="float:right;padding:15px;font-size: 18px;width:150px;">
                        <text style="color:white;">Hello, @Session["UserName"]</text>
                    </div>
                    <div style="float:left;padding:15px;font-size: 18px;width:100px;">
                        @Html.ActionLink("Log out", "LogOut", "Home")
                    </div>
                    <div style="float:left;padding:15px;font-size: 18px;width:150px;">
                        @Html.ActionLink("View Statuses", "ViewStatuses", "Staff")
                    </div>
                    <div style="float:left;padding:15px;font-size: 18px;width:150px;">
                        @Html.ActionLink("TicketList", "ViewTickets", "Staff")
                    </div>
                </li>
            }
        </ul>
    </nav>
    

    @RenderBody()
</body>
</html>
