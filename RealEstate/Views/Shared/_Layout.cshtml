<!DOCTYPE html>
<html ng-app="appRealEstate">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title</title>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/underscore.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Bootstrap/css/styles.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Angular/Module.js"></script>
    <script src="~/Angular/Service.js"></script>
    <script src="~/Angular/Controller.js"></script>
    <script src="~/Angular/Filter.js"></script>
    <script src="~/Angular/Directives.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body>
    <header></header>
    <nav class="navbar navbar-default">
        <ul class="nav navbar-nav " id="top_menu" >
            @if (Session["UserName"] == null)
            {
            
                <li>
                    @Html.ActionLink("Войти", "LogIn", "Account")
                </li>
                <li>
                    @Html.ActionLink("Недвижимость", "Table", "Estates")
                </li>
                <li>
                    @Html.ActionLink("Справочник областей", "Regions", "Directories", new { tableName = "Regions", title = "Справочник областей" }, null)
                </li>
                <li>
                    @Html.ActionLink("Справочник городов", "Regions", "Directories", new { tableName = "Cities", title = "Справочник городов" }, null)
                </li>
                <li>
                    @Html.ActionLink("Справочник районов", "Districts", "Directories")
                </li>
            }
            else
            {
                <li style="width:100%;height:4em;background-color:black;">
                    <div style="float:right;padding:15px;font-size: 18px;width:150px;">
                        <text style="color:white;">Hello, @Session["UserName"]</text>
                    </div>
                    <div style="float:left;padding:15px;font-size: 18px;width:100px;">
                        @Html.ActionLink("Log out", "LogOut", "Home")
                    </div>
                    <div style="float:left;padding:15px;font-size: 18px;width:150px;">
                        @Html.ActionLink("View Statuses", "ViewStatuses", "Staff")
                    </div>
                    <div style="float:left;padding:15px;font-size: 18px;width:150px;">
                        @Html.ActionLink("TicketList", "ViewTickets", "Staff")
                    </div>
                </li>
            }
        </ul>
    </nav>
    

    @RenderBody()
</body>
</html>
