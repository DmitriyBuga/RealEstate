<!DOCTYPE html>
<html ng-app="appRealEstate">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>@ViewBag.Title</title>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/underscore.min.js"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <script src="~/Angular/Module.js"></script>
    <script src="~/Angular/Service.js"></script>
    <script src="~/Angular/Controller.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    
</head>
<body>
    @if (Session["UserName"] == null)
    {
        <div style="width:100%;height:4em;background-color:black">
            <div style="float:left;padding:15px; font-size: 18px;">
                @Html.ActionLink("Войти", "LogIn", "Account")
            </div>
            <div style="float:left;padding:15px;font-size: 18px">
                @Html.ActionLink("Недвижимость", "Table", "Estates")
            </div>
            <div style="float:left;padding:15px;font-size: 18px;">
                @Html.ActionLink("Справочник областей", "Regions", "Directories")
            </div>
            <div style="float:left;padding:15px;font-size: 18px;">
                @Html.ActionLink("Справочник городов", "Cities", "Directories")
            </div>
            <div style="float:left;padding:15px;font-size: 18px;">
                @Html.ActionLink("Справочник улиц", "Streets", "Directories")
            </div>
        </div>
    }
    else
    {
        <div style="width:100%;height:4em;background-color:black;">
            <div style="float:right;padding:15px;font-size: 18px;width:150px;">
                <text style="color:white;">Hello, @Session["UserName"]</text>
            </div>
            <div style="float:left;padding:15px;font-size: 18px;width:100px;">
                @Html.ActionLink("Log out", "LogOut", "Home")
            </div>
            <div style="float:left;padding:15px;font-size: 18px;width:150px;">
                @Html.ActionLink("View Statuses", "ViewStatuses", "Staff")
            </div>
            <div style="float:left;padding:15px;font-size: 18px;width:150px;">
                @Html.ActionLink("TicketList", "ViewTickets", "Staff")
            </div>
        </div>
    }

    @RenderBody()
    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
    
</body>
</html>
